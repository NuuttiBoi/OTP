<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="282.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projectdemo.controller.CarPageController">
   <children>

      <!-- Article styled box for car details -->
      <AnchorPane layoutX="18.0" layoutY="76.0" prefHeight="389.0" prefWidth="200.0" styleClass="article-box">
         <children>
            <VBox alignment="CENTER" layoutY="48.0" prefHeight="341.0" prefWidth="196.0" spacing="10.0">
               <children>
                  <ImageView fx:id="carPic" fitHeight="248.0" fitWidth="212.0" pickOnBounds="true" preserveRatio="true" />
                  <Text id="modelText" fx:id="modelText" strokeType="OUTSIDE" strokeWidth="0.0" text="  Car Model" wrappingWidth="235.0">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <Text id="detailsText" fx:id="carDetailsText" strokeType="OUTSIDE" strokeWidth="0.0" text="    Car Details" wrappingWidth="235.0" />
                  <Text id="priceText" fx:id="priceText" strokeType="OUTSIDE" strokeWidth="0.0" text="            Price" wrappingWidth="231.0" />
               </children>
            </VBox>
         </children>
      </AnchorPane>

      <Button id="rentCarButton" fx:id="rentCarButton" layoutX="103.0" layoutY="538.0" mnemonicParsing="false" onAction="#handleRentCarClick" text="Rent Car" />
      <Pane id="topPane" fx:id="mainPane" opacity="0.74" prefHeight="60.0" prefWidth="350.0">
         <children>
            <Text id="signedInText" layoutX="94.0" layoutY="71.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="43.0" />
            <ImageView id="logo" fx:id="logo" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
            <Button id="backButton" fx:id="backButton" layoutX="217.0" layoutY="14.0" mnemonicParsing="false" onAction="#onClick" text="Back" />
            <Text fill="#dad1d1" layoutX="116.0" layoutY="35.0" strokeType="OUTSIDE" strokeWidth="0.0" text="WhipRent" wrappingWidth="60.0">
               <font>
                  <Font name="System Bold Italic" size="13.0" />
               </font>
            </Text>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="20.0" right="21.0" top="2.0" />
         </padding>
      </Pane>
   </children>
</AnchorPane>
